<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="PasskeyTools"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Passkeytools">

        <!-- Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Passkeytools"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Provider activities â€” transparent theme so they appear as dialogs -->
        <activity
            android:name=".service.ProviderCreateActivity"
            android:exported="false"
            android:theme="@style/Theme.Passkeytools.Transparent" />

        <activity
            android:name=".service.ProviderGetActivity"
            android:exported="false"
            android:theme="@style/Theme.Passkeytools.Transparent" />

        <!-- Credential Provider Service -->
        <service
            android:name=".service.PasskeyProviderService"
            android:exported="true"
            android:label="PasskeyTools"
            android:permission="android.permission.BIND_CREDENTIAL_PROVIDER_SERVICE"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.service.credentials.CredentialProviderService" />
            </intent-filter>
            <meta-data
                android:name="android.credentials.provider"
                android:resource="@xml/provider_config" />
        </service>

    </application>

</manifest>